---
import LayoutBase from './layout-base.astro'
import { Layout as LayoutRoot } from '@components/layout/layout'
import { LayoutBody } from '@components/layout/layout-body'

interface Props {
  title: string
}

const { title } = Astro.props
---

<LayoutBase title={title}>
  <LayoutRoot>
    <LayoutRoot.Header />
    <LayoutBody>
      <slot />
    </LayoutBody>
  </LayoutRoot>
</LayoutBase>
